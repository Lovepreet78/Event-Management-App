<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_screen_bg"
    android:gravity="center"
    tools:context=".intialactivity.HomeActivity">


    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="@drawable/event_management_home_icon"
        android:layout_centerHorizontal="true"
        />



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_110sdp"
        android:id="@+id/progressBarHome"
        android:visibility="gone"

        />
    <LinearLayout
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">



        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue as guest"
            android:id="@+id/guestMode"



            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButtonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="@dimen/_20sdp"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUpButtonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="@dimen/_20sdp"

            />

<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/savedLoginButtonHome"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Saved Login"-->
<!--            android:layout_marginTop="@dimen/_20sdp"-->

<!--            />-->


    </LinearLayout>






</RelativeLayout>